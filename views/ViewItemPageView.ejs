<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs", {title: "View item page"}) %>
  </head>
  <body>
    <div class="container1">
      <div class="container2 aside-content">
        <%- include("./partials/closeSidebarButton.ejs") %> 
        <%- include("./partials/aside.ejs", {collectionData: collectionData, urlParameters: urlParameters}) %>
        
      </div>

      <%- include("./partials/modal.ejs") %>

      <div class="container2 main-content">
        <%- include("./partials/openAsideButton.ejs") %>
      
        <h1><%=data.title%></h1>
        <a class="back-home-link" href="/<%= urlParameters.title %>">
          <span class="material-symbols-outlined">arrow_back_ios</span>
          <span class="link"> Go back to the homepage</span>
        </a>

        <div class="task-container addItemPage-container">
          <div class="container3">
            <label><%= data.title %></label>
          </div>

          <div class="container3">
            <label><%= data.description %></label>
          </div>
        </div>

        <div class="add-item-container add-item-link-position">
          <a
            class="add-item-btn"
            href="/<%=urlParameters.title%>/edit-item/<%= data.id %>"
          >
            <span class="material-icons-outlined">edit</span>
            <span class="add-item-link">Edit Item</span>
          </a>
        </div>
      </div>
    </div>
    <%- include("./partials/scripts.ejs") %>
    
  </body>
</html>
